@import 'mixins.styl'

.iquiz_tables
	&
		width 780px
		margin 0 auto
		position relative
		background #002755
		display block

		*
			font-family Roboto, Arial, sans-serif
			box-sizing border-box
			margin 0
			padding 0


		// forms
		fieldset
			border 0

		input
		button
		textarea
			ibreset()
			borderbox()

		button
			cursor pointer

		&--inner
			height 580px
			position relative


		&--area
			&
					position relative
					width 780px
					height 667px

			&.-area_1
				// margin -333px 0 0 0
				background url('../images/area-1-ru.png') no-repeat
				background-size 100%

				for i in (1..15)
					.iquiz_tables--table.-n_{i}
						display block

				for i in (30..31)
					.iquiz_tables--table.-n_{i}
						display block

				for i in (16..29)
					.iquiz_tables--table.-n_{i}
						display none

			&.-area_2
				// margin -333px 0 0 0
				background url('../images/area-2-ru.png') no-repeat
				background-size 100%

				.iquiz_tables--table.-org
					display none

				for i in (1..15)
					.iquiz_tables--table.-n_{i}
						display none

				for i in (30..31)
					.iquiz_tables--table.-n_{i}
						display none

				for i in (16..29)
					.iquiz_tables--table.-n_{i}
						display block

		&--loading
			&
				display none
				position absolute
				top 0
				left 0
				width 100%
				height 100%
				background rgba(#fff, .9)
				line-height 400px
				z-index 100
				text-align center

			&.-show
				display block


		&--table
			&
				position absolute
				width 70px
				height 65px
				margin -15px 0 0

			&.-reserved
				.iquiz_tables--table_inner
					opacity .3

		&--table_inner
			position relative
			width 70px
			height 65px
			background url('../images/table.png') center bottom no-repeat
			background-size 100%

		&--table_org
			text-align center
			position absolute
			width 160px
			left 50%
			top 5px
			margin 0 0 0 -80px
			font-size 13px

		&--table_num
			display block
			width 42px
			height 42px
			background rgba(#fff, .7)
			border-radius 90px
			font-size 22px
			line-height 42px
			text-align center
			font-weight 300
			position absolute
			top 0
			left 50%
			margin 0 0 0 -22px

		&--table_opener
			position absolute
			top 0
			left 0
			width 100%
			height 100%
			z-index 10
			cursor pointer

		&--table_info
			text-align center


		&--popup
			display none
			width 250px
			background #fff
			border-radius 5px
			position absolute
			padding 20px
			z-index 100
			box-shadow 0 1px 3px rgba(#000, .3)
			margin: -15px 0 0
			transform: translate(-50%, -100%)

			&:after
				top: 100%;
				left: 50%;
				border: solid transparent;
				content: " ";
				height: 0;
				width: 0;
				position: absolute;
				pointer-events: none;
				border-color: rgba(255, 255, 255, 0);
				border-top-color: #ffffff;
				border-width: 7px;
				margin-left: -7px;

			&.-show
				display block

		&--form
			&
				&:before
					display none
					position absolute
					top 0
					left 0
					right 0
					bottom 0
					background #fff
					opacity .9
					content 'Loading...'
					text-align center
					line-height 220px

				fieldset
					margin 0
					padding 0

					input

						&
							font-size 16px
							border 1px solid #a4c3e8
							padding 10px
							margin 0 0 10px
							border-radius 5px
							width 100%

						&:focus
							border-color #226ecd

						&.-error
							border-color red

					button
						&
							ibreset()
							border-radius 5px
							background #226ecd
							color #fff
							font-size 16px
							padding 10px
							width 100%

							&:hover
								background #1e61b5

							&:active
								shadow(inset 0 2px 0 rgba(#000, .3))

							&:disabled
								opacity .5
								background #226ecd

			&.-loading
				user-select none
				&:before
					display block

		&--nav
			text-align center
			padding 30px 0

			button
				&
					position relative
					cursor pointer
					display inline-block
					margin 0 5px
					width 30px
					height 30px
					border-radius 90px
					border 1px solid #fff
					color #fff
					font-size 16px
					line-height 30px

				&.-active
					color: #002755
					background: #fff


