.notify
	&
		position: fixed
		top: 15px
		right: 15px
		background: #fff
		display: block
		padding: 15px 20px
		border-radius: 10px
		font-size: 14px
		visibility hidden
		opacity 0
		transition: opacity .3s ease, visibility .3s ease

	&_error
		background-color: #DE463D
		color #fff

	&_success
		background-color: #5AB963
		color: #fff

	&_show
		visibility visible
		opacity 1

	&_hide
		visibility hidden
		opacity 0
